{
   "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist/",
      "noEmitOnError": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "inlineSourceMap": true,
      "declaration": true,
      "locale": "es-es",
      "target": "es5",
      "types": [
         "node",
         "mocha",
         "chai",
         "js-beautify",
         "lodash",
         "mock-fs"
      ]
   },
   "files": [
      "src/index.ts"
   ],
   "include": [
      "**/*.spec.ts"
   ]
}
