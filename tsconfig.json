{
   "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist/",
      "noEmitOnError": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "inlineSourceMap": true,
      "declaration": true,
      "locale": "es-es",
      "lib": ["es5", "es2015"],
      "target": "es5",
      "types": [
         "node"
      ]
   },
   "files": [
      "src/index.ts"
   ],
   "include": [
      "src/**/*.ts"
   ]
}
