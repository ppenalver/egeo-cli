#!/usr/bin/env node

const program = require('commander');
const { docGenerator, JiraCards } = require('../dist/index');

program
   .version(require('../package.json').version)
   .option('-d --document <file>', 'file with comments full path')
   .option('-j --jira', 'Jira options')
   .parse(process.argv);

if (program.document) {
   console.log('document')
   docGenerator.generateDoc(program.document);
} else if (program.jira) {
   console.log('cards')
   const cards = new JiraCards();
   cards.test().catch(err => console.error(err));
} else {
   console.error('Unknown option!');
   process.exit(1);
}
